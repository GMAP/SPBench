{
        "compiler"		:"g++ -std=c++1y",
        "cflags"                :"-no-pie -O3",
        "pre_src_cmd"		:"",
        "post_src_cmd"		:"",
        "macros"                :"",
        "ldflags"               :"-ljpeg -lgsl -lgslcblas -ltbb -lpthread",     
        "pkg-config" : {
                "myPKG_1"       :"",
                "myPKG_2"       :"",
                "myPKG_N"       :"",
                "gsl"           :"pkg-config --cflags --libs gsl",
                "jpeg"          :"pkg-config --cflags --libs libjpeg"
        },
        "includes" : {
        	"myINC_1"	:"",
                "myINC_2"	:"",
                "myINC_N"	:"-I $BENCH_DIR/ppis/tbb/tbb/include"
        },
        "libs" : {
                "myLIB_1"	:"",
                "myLIB_2"	:"",
                "myLIB_N"	:"-L $BENCH_DIR/ppis/tbb/tbb/ -ltbb"
        }
}
